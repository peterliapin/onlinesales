{
  "AllowedHosts": "*",
  "MigrateOnStart": true,
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "Postgres": {
    "Server": "localhost",
    "Port": "5432",
    "UserName": "postgres",
    "Password": "postgres",
    "Database": "onlinesales"
  },
  "Elasticsearch": {
    "Server": "localhost",
    "Port": "9200",
    "UseHttps": false,
    "UserName": "elastic",
    "Password": "elastic",
    "IndexPrefix": "onlinesales"
  },
  "SmtpServer": {
    "Server": "$SMTPSERVER__SERVER",
    "Port": "25",
    "UserName": "$SMTPSERVER__USERNAME",
    "Password": "$SMTPSERVER__PASSWORD",
    "UseSSL": true
  },
  "TaskRunner": {
    "CronSchedule": "0/5 * * * * ?"
  },
  "Images": {
    "Extensions": [
      ".png",
      ".jpg",
      ".jpeg",
      ".ico",
      ".webp",
      ".svg"
    ],
    "MaxSize": "10MB"
  },
  "EmailAttachment": {
    "Extensions": [
      ".png",
      ".jpg",
      ".jpeg",
      ".pdf",
      ".xls",
      ".doc"
    ],
    "MaxSize": "5MB"
  },
  "CacheProfiles": [
    {
      "Type": "ImageResponse",
      "Duration": 1200,
      "VaryByHeader": "User-Agent"
    }
  ]
}
