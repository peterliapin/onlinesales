{
  "AllowedHosts": "*",
  "MigrateOnStart": true,
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "Postgres": {
    "Server": "localhost",
    "Port": "5432",
    "UserName": "postgres",
    "Password": "postgres",
    "Database": "onlinesales"
  },
  "Elasticsearch": {
    "Server": "localhost",
    "Port": "9200",
    "UseHttps": false,
    "UserName": "elastic",
    "Password": "elastic",
    "IndexPrefix": "onlinesales"
  },
  "SmtpServer": {
    "Server": "$SMTPSERVER__SERVER",
    "Port": "25",
    "UserName": "$SMTPSERVER__USERNAME",
    "Password": "$SMTPSERVER__PASSWORD",
    "UseSSL": true
  },
  "TaskRunner": {
    "CronSchedule": "0 0/1 * * * ?"
  },
  "Tasks": {
    "CustomerScheduledEmail": {
      "CronSchedule": "0 0/1 * * * ?",
      "RetryCount": "2",
      "RetryInterval": "5"
    },
    "SyncIPDetailsTask": {
      "CronSchedule": "0 0/1 * * * ?",
      "RetryCount": "2",
      "RetryInterval": "5"
    }
  },
  "Images": {
    "Extensions": [
      ".png",
      ".jpg",
      ".jpeg",
      ".ico",
      ".webp",
      ".svg",
      ".gif"
    ],
    "MaxSize": "10MB"
  },
  "CacheProfiles": [
    {
      "Type": "ImageResponse",
      "Duration": 1200,
      "VaryByHeader": "User-Agent"
    }
  ],
  "Cors": {
    "AllowedOrigins": [
      "*"
    ]
  }
}
