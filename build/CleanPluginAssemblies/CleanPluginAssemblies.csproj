<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ReleaseVersion>1.0.6-pre</ReleaseVersion>
  </PropertyGroup>

  <Target Name="CleanPluginAssemblies">    
    <!-- When we reference OnlineSale dll/project in the plugin and use CopyLocalLockFileAssemblies=true option dotnet put
    all possible dependencies into the plugin build output folder. Most of these references come from the host project and
    are not needed in order for plugin to be loaded by the host app. This target is created to clean all redundant files in
    the plugin build output folder.
    -->  
    <Exec Command="dotnet $(OutputPath)CleanPluginAssemblies.dll &quot;$(HostBuildOutputFolder)&quot; &quot;$(PluginBuildOutputFolder)&quot;" />
  </Target>      
</Project>
